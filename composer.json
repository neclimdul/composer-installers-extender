{
    "name": "neclimdul/composer-installers-extender",
    "description": "Extend the composer/installers plugin to accept any arbitrary package type.",
    "homepage": "http://nerdpalace.net/",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Stephen Beemsterboer",
            "email": "stephen@oomphinc.com",
            "homepage": "https://github.com/balbuf"
        },
        {
            "name": "Nathan Dentzau",
            "email": "nate@oomphinc.com",
            "homepage": "http://oomph.is/ndentzau"
        },
        {
            "name": "James Gilliland",
            "homepage": "https://nerdpalace.net"
        }
    ],
    "support": {
        "issues": "https://github.com/neclimdul/composer-installers-extender/issues"
    },
    "require": {
        "php": ">=8.1",
        "composer-plugin-api": "^1.1 || ^2.0",
        "composer/installers": "^1.0 || ^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-mockery": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^12.0",
        "rector/rector": "^2.0",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "replace": {
        "oomphinc/composer-installers-extender" : "^2.0"
    },
    "autoload":{
        "psr-4": {
            "NecLimDul\\ComposerInstallersExtender\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NecLimDul\\ComposerInstallerExtender\\Tests\\": "tests/src/"
        }
    },
    "scripts": {
        "fix": "vendor/bin/phpcbf",
        "lint": "vendor/bin/phpcs",
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "class": "NecLimDul\\ComposerInstallersExtender\\Plugin"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
