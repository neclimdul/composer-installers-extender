<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
   colors="true"
   beStrictAboutChangesToGlobalState="true"
   beStrictAboutOutputDuringTests="true"
   beStrictAboutTestsThatDoNotTestAnything="true"
   bootstrap="vendor/autoload.php"
   cacheDirectory=".phpunit.cache">
  <coverage>
    <report>
      <clover outputFile="tests/results/coverage.xml"/>
      <html outputDirectory="tests/results/html"/>
      <text outputFile="tests/results/coverage.txt"/>
    </report>
  </coverage>
  <php>
    <ini name="error_reporting" value="32767"/>
    <ini name="memory_limit" value="-1"/>
  </php>
  <testsuites>
    <testsuite name="unit">
      <directory>./tests/src</directory>
    </testsuite>
  </testsuites>
  <logging/>
  <source>
    <include>
      <directory>./src</directory>
    </include>
  </source>
</phpunit>
